<h1>Edit your book</h1>

<form action="/books/updatedbook" method="POST" class="form">
  <input type="hidden" name="id" value="{{book.id}}">
  <div class="form-control">
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Write the book name" value="{{book.title}}">
  </div>

  <div class="form-control">
    <label for="quantity_page">Page quantity</label>
    <input type="number" name="quantity_page" placeholder="Write the number of pages" value="{{book.quantity_page}}">
  </div>

  <input type="submit" value="Edit">
</form>